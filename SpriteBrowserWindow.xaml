<Window x:Class="LTTPEnhancementTools.SpriteBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:LTTPEnhancementTools.Converters"
        xmlns:controls="clr-namespace:LTTPEnhancementTools.Controls"
        Title="Browse Sprites"
        Icon="Resources/icon.ico"
        Width="980" Height="640"
        MinWidth="600" MinHeight="400"
        Background="{StaticResource BgBrush}"
        Foreground="{StaticResource TextBrush}"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">


    <DockPanel Margin="12">
        <!-- Search bar -->
        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="Search:"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       Foreground="{StaticResource TextMutedBrush}"/>
            <TextBox x:Name="SearchBox"
                     Style="{StaticResource DarkTextBox}"
                     TextChanged="SearchBox_TextChanged"
                     VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Bottom buttons -->
        <Border DockPanel.Dock="Bottom"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,10,0,0"
                Margin="0,10,0,0">
            <DockPanel>
                <!-- Right-aligned buttons must dock before the fill element -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Content="Cancel"
                            Style="{StaticResource DarkButton}"
                            Padding="16,6"
                            Margin="0,0,8,0"
                            Click="Cancel_Click"/>
                    <Button x:Name="SelectButton"
                            Content="Select Sprite"
                            Style="{StaticResource AccentButton}"
                            Padding="16,6"
                            IsEnabled="False"
                            Click="SelectSprite_Click"/>
                </StackPanel>

                <!-- Left: refresh button + status count -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="RefreshButton"
                            Content="↻ Refresh"
                            Style="{StaticResource DarkButton}"
                            Padding="10,4"
                            FontSize="12"
                            Click="RefreshList_Click"/>
                    <TextBlock x:Name="StatusText"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="8,0,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Card grid -->
        <Grid>
            <!-- Loading / error overlay -->
            <TextBlock x:Name="LoadingText"
                       Text="Loading sprites…"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontStyle="Italic"
                       Foreground="{StaticResource TextMutedBrush}"/>

            <!-- Sprite cards -->
            <ListBox x:Name="SpriteList"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.CanContentScroll="False"
                     SelectionChanged="SpriteList_SelectionChanged"
                     MouseDoubleClick="SpriteList_MouseDoubleClick"
                     Visibility="Collapsed">

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="0"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="4"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="CardBorder"
                                            Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Width="128"
                                            Padding="8,8,8,10"
                                            Cursor="Hand">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="CardBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                            <Setter TargetName="CardBorder" Property="Background" Value="#18183A"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="CardBorder" Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="CardBorder" Property="Background" Value="#20204A"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="112">
                            <StackPanel>
                                <!-- Sprite preview with animated triforce loading indicator -->
                                <controls:SpriteImageControl
                                    ImageUrl="{Binding Preview}"
                                    Margin="0,0,0,7"/>

                                <!-- Sprite name -->
                                <TextBlock Text="{Binding Name}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap"
                                           ToolTip="{Binding Name}"/>

                                <!-- Author -->
                                <TextBlock Text="{Binding Author}"
                                           FontSize="10"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap"
                                           ToolTip="{Binding Author}"
                                           Margin="0,1,0,0"/>
                            </StackPanel>

                            <!-- Star / favorite button (top-right overlay) -->
                            <Button Tag="{Binding}"
                                    Content="{Binding StarGlyph}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Width="20" Height="20"
                                    Padding="0"
                                    FontSize="13"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    Click="StarButton_Click"
                                    ToolTip="Toggle favourite">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="Transparent" Padding="2">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                <Setter Property="Foreground" Value="#DAA520"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#EFBC68"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>
