<Window x:Class="LTTPEnhancementTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:LTTPEnhancementTools.Converters"
        xmlns:models="clr-namespace:LTTPEnhancementTools.Models"
        Title="ALttP Enhancement Tools"
        Icon="Resources/icon.ico"
        Width="1100" Height="800"
        MinWidth="800" MinHeight="560"
        Background="{StaticResource BgBrush}"
        Foreground="{StaticResource TextBrush}"
        FontFamily="Segoe UI">

    <Window.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVis"/>
        <conv:NullToVisibilityInverseConverter x:Key="NullToVisInv"/>
        <conv:ErrorToBrushConverter x:Key="ErrToBrush"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:BoolToVisibilityInverseConverter x:Key="BoolToVisInv"/>
        <conv:UrlToImageSourceConverter x:Key="UrlToImageConv"/>
    </Window.Resources>

    <DockPanel>
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• HEADER / TOOLBAR â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border DockPanel.Dock="Top"
                Background="#14141A"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: app name + ROM info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock Text="ALttP Enhancement Tools"
                               FontSize="15" FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <Button x:Name="SelectRomButton"
                            Content="Select ROM..."
                            Style="{StaticResource AccentButton}"
                            Click="SelectRom_Click"/>

                    <!-- ROM info (shown when ROM is selected) -->
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding RomBaseName, Converter={StaticResource NullToVis}}"
                                VerticalAlignment="Center"
                                Margin="12,0,0,0">
                        <TextBlock Text="{Binding RomBaseName}"
                                   FontWeight="SemiBold" FontSize="13"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>
                        <Button Content="Change"
                                Style="{StaticResource DarkButton}"
                                Margin="8,0,0,0"
                                Padding="8,4"
                                Click="SelectRom_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Center: Music Library -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="LIBRARY"
                               Style="{StaticResource SectionLabel}"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                    <Border Background="{StaticResource SurfaceAltBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8,4"
                            Margin="0,0,6,0"
                            MinWidth="140"
                            MaxWidth="300">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Consolas" FontSize="11"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="220">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding LibraryFolder}"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        <Setter Property="FontStyle" Value="Normal"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LibraryFolder}" Value="{x:Null}">
                                                <Setter Property="Text" Value="No library folder set"/>
                                                <Setter Property="FontStyle" Value="Italic"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextFaintBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding LibrarySongCount}"
                                       FontSize="11"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       VerticalAlignment="Center"
                                       Margin="6,0,0,0"/>
                        </StackPanel>
                    </Border>
                    <Button Content="Change Location..."
                            Style="{StaticResource DarkButton}"
                            Padding="8,4"
                            Click="BrowseLibrary_Click"
                            ToolTip="Move the Music Library to a different folder"/>
                </StackPanel>

                <!-- Right: Config buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Load"
                            Style="{StaticResource DarkButton}"
                            Margin="0,0,8,0"
                            Click="LoadConfig_Click"/>
                    <Button Content="Save"
                            Style="{StaticResource DarkButton}"
                            Margin="0,0,8,0"
                            IsEnabled="{Binding HasRom}"
                            Click="SaveConfig_Click"/>
                    <!-- Config message -->
                    <TextBlock x:Name="ConfigMessage"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• MAIN CONTENT â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="200"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="130" MinHeight="80"/>
            </Grid.RowDefinitions>

            <!-- â”€â”€ Sprite Header â”€â”€ -->
            <Border Grid.Row="0"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="8"
                    Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sprite image / placeholder -->
                    <Grid Grid.Column="0" Width="64" Height="64"
                          HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Default placeholder (shown when no preview URL) -->
                        <Border Background="#2A2A35"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Visibility="{Binding SpritePreviewUrl, Converter={StaticResource NullToVisInv}}">
                            <TextBlock Text="Default"
                                       FontSize="11"
                                       Foreground="{StaticResource TextFaintBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <!-- Actual preview image -->
                        <Image Source="{Binding SpritePreviewUrl, Converter={StaticResource UrlToImageConv}}"
                               Visibility="{Binding SpritePreviewUrl, Converter={StaticResource NullToVis}}"
                               Stretch="Uniform"/>
                    </Grid>

                    <!-- Info and buttons -->
                    <Grid Grid.Column="1" VerticalAlignment="Center" Margin="8,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Label + sprite name -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="LINK SPRITE"
                                       Style="{StaticResource SectionLabel}"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock VerticalAlignment="Center" FontSize="13">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding SpriteDisplayName}"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                        <Setter Property="FontStyle" Value="Normal"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasSprite}" Value="False">
                                                <Setter Property="Text" Value="Default (none selected)"/>
                                                <Setter Property="FontStyle" Value="Italic"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextFaintBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <!-- Browse buttons -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Button Content="Browse File..."
                                    Style="{StaticResource DarkButton}"
                                    Padding="10,4"
                                    Margin="0,0,6,0"
                                    Click="BrowseSprite_Click"
                                    ToolTip="Select a local .zspr or .spr file"/>
                            <Button Content="Browse Sprites..."
                                    Style="{StaticResource DarkButton}"
                                    Padding="10,4"
                                    Margin="0,0,6,0"
                                    Click="BrowseSpritesOnline_Click"
                                    ToolTip="Pick a sprite from the online ALttP sprite library"/>
                            <Button Content="âœ•"
                                    Style="{StaticResource ClearButton}"
                                    Visibility="{Binding HasSprite, Converter={StaticResource BoolToVis}}"
                                    Click="ClearSprite_Click"
                                    ToolTip="Remove sprite"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- â”€â”€ Track List â”€â”€ -->
            <Border Grid.Row="1"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    ClipToBounds="True">
                <DataGrid x:Name="TrackGrid"
                          Style="{StaticResource DarkDataGrid}"
                          ItemsSource="{Binding Tracks}"
                          BorderThickness="0"
                          RowHeight="36">

                    <DataGrid.Columns>
                        <!-- Slot number -->
                        <DataGridTemplateColumn Header="Slot" Width="52" CanUserResize="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="{x:Type models:TrackSlot}">
                                    <TextBlock Text="{Binding SlotDisplay}"
                                               FontWeight="Bold" FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontFamily="Consolas"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Track name -->
                        <DataGridTemplateColumn Header="Track" Width="220" CanUserResize="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="{x:Type models:TrackSlot}">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="13" FontWeight="Medium"
                                               Foreground="{StaticResource TextBrush}"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding Name}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Assigned file -->
                        <DataGridTemplateColumn Header="Assigned File" Width="*" CanUserResize="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="{x:Type models:TrackSlot}">
                                    <Grid VerticalAlignment="Center">
                                        <!-- Assigned filename -->
                                        <TextBlock Visibility="{Binding HasFile, Converter={StaticResource BoolToVis}}"
                                                   Text="{Binding FileName}"
                                                   FontFamily="Consolas" FontSize="12"
                                                   Foreground="{Binding ValidationError, Converter={StaticResource ErrToBrush}}"
                                                   TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"
                                                   ToolTip="{Binding ValidationError}"/>
                                        <!-- Unassigned placeholder -->
                                        <TextBlock Visibility="{Binding HasFile, Converter={StaticResource BoolToVisInv}}"
                                                   Text="unassigned"
                                                   FontStyle="Italic" FontSize="12"
                                                   Foreground="{StaticResource TextFaintBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="Actions" Width="230" CanUserResize="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="{x:Type models:TrackSlot}">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Margin="0,0,6,0">

                                        <!-- Play/Stop button (only when file assigned) -->
                                        <Button Visibility="{Binding HasFile, Converter={StaticResource BoolToVis}}"
                                                Content="{Binding PlayButtonText}"
                                                Style="{StaticResource IconButton}"
                                                Margin="0,0,6,0"
                                                CommandParameter="{Binding}"
                                                Click="PlayStop_Click"
                                                ToolTip="Preview track"/>

                                        <!-- Library picker -->
                                        <Button Content="Library"
                                                Style="{StaticResource DarkButton}"
                                                Padding="8,4" FontSize="12"
                                                Margin="0,0,6,0"
                                                CommandParameter="{Binding}"
                                                Click="LibraryPick_Click"
                                                ToolTip="Pick from Music Library"/>

                                        <!-- Replace / Pick File -->
                                        <Button Padding="8,4" FontSize="12"
                                                Margin="0,0,6,0"
                                                CommandParameter="{Binding}"
                                                Click="Replace_Click">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource DarkButton}">
                                                    <Setter Property="Content" Value="Pick File"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasFile}" Value="True">
                                                            <Setter Property="Content" Value="Replace"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <!-- Clear (only when file assigned) -->
                                        <Button Visibility="{Binding HasFile, Converter={StaticResource BoolToVis}}"
                                                Content="âœ•"
                                                Style="{StaticResource ClearButton}"
                                                CommandParameter="{Binding}"
                                                Click="Clear_Click"
                                                ToolTip="Remove assignment"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- â”€â”€ Apply Section â”€â”€ -->
            <Border Grid.Row="2"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="16,12"
                    Margin="0,12,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Output folder row -->
                    <TextBlock Grid.Row="0"
                               Text="OUTPUT FOLDER (MSU PACK DESTINATION)"
                               Style="{StaticResource SectionLabel}"/>

                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Background="{StaticResource SurfaceAltBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10,6"
                                Margin="0,0,8,0"
                                MinHeight="34">
                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                                       FontFamily="Consolas" FontSize="12"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding OutputDir}"/>
                                        <Setter Property="FontStyle" Value="Normal"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OutputDir}" Value="{x:Null}">
                                                <Setter Property="Text" Value="Auto-set when ROM is selected"/>
                                                <Setter Property="FontStyle" Value="Italic"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextFaintBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>

                        <Button Grid.Column="1"
                                Content="Browse..."
                                Style="{StaticResource DarkButton}"
                                Padding="12,6"
                                Margin="0,0,6,0"
                                Click="BrowseOutputDir_Click"/>

                        <Button Grid.Column="2"
                                Content="ðŸ—‘"
                                Style="{StaticResource ClearButton}"
                                Padding="10,6"
                                Click="CleanOutputFolder_Click"
                                ToolTip="Delete all files in the output folder"/>
                    </Grid>

                    <!-- Base name row -->
                    <TextBlock Grid.Row="2"
                               Text="OUTPUT BASE NAME"
                               Style="{StaticResource SectionLabel}"/>

                    <TextBox Grid.Row="3"
                             Style="{StaticResource DarkTextBox}"
                             Text="{Binding OutputBaseName, UpdateSourceTrigger=PropertyChanged}"
                             FontFamily="Consolas"
                             Margin="0,0,0,10"
                             ToolTip="File name stem used for all output files (e.g. myrom â†’ myrom.sfc, myrom.msu, myrom-2.pcm)"/>

                    <!-- Apply row -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="ApplyButton"
                                Grid.Column="0"
                                Content="Apply to ROM"
                                Style="{StaticResource AccentButton}"
                                IsEnabled="{Binding CanApply}"
                                Click="Apply_Click"/>

                        <TextBlock Grid.Column="1"
                                   Text="{Binding AssignedCountText}"
                                   FontSize="12"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>

                        <!-- Success message -->
                        <TextBlock x:Name="ApplySuccessText"
                                   Grid.Column="2"
                                   FontSize="12"
                                   Foreground="{StaticResource SuccessBrush}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,10,0"
                                   Visibility="Collapsed"/>

                        <!-- Launch ROM button (appears after successful apply) -->
                        <Button Grid.Column="3"
                                Content="Launch ROM"
                                Style="{StaticResource AccentButton}"
                                Padding="12,6"
                                IsEnabled="{Binding CanLaunch}"
                                Visibility="{Binding CanLaunch, Converter={StaticResource BoolToVis}}"
                                Click="LaunchRom_Click"
                                ToolTip="Open the output ROM with your default emulator"/>
                    </Grid>

                    <!-- Progress bar -->
                    <Grid Grid.Row="5" x:Name="ProgressSection" Visibility="Collapsed" Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ProgressBar x:Name="ApplyProgress"
                                     Grid.Row="0"
                                     Style="{StaticResource DarkProgressBar}"
                                     Minimum="0" Maximum="100" Value="0"/>
                        <TextBlock x:Name="ProgressStepText"
                                   Grid.Row="1"
                                   FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   Margin="0,4,0,0"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- â”€â”€ Library Popup â”€â”€ (no Grid.Row â†’ floats; Popup renders outside layout) -->
            <Popup x:Name="LibraryPopup"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Fade"
                   Closed="LibraryPopup_Closed">
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10"
                        Width="320"
                        MaxHeight="380">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search box -->
                        <TextBox x:Name="LibrarySearch"
                                 Grid.Row="0"
                                 Style="{StaticResource DarkTextBox}"
                                 Margin="0,0,0,6"
                                 TextChanged="LibrarySearch_TextChanged"/>

                        <!-- Song list â€” ItemsControl with play + single-click-assign per row -->
                        <ScrollViewer Grid.Row="1"
                                      MaxHeight="300"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="LibraryList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource RowHoverBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            <!-- Play button (enabled only when cached/PCM) -->
                                            <Button Grid.Column="0"
                                                    Style="{StaticResource IconButton}"
                                                    Width="22" Height="22"
                                                    Margin="2"
                                                    Tag="{Binding}"
                                                    Click="LibraryItemPlay_Click"
                                                    ToolTip="Preview this song"
                                                    IsEnabled="{Binding IsCached}">
                                                <TextBlock Text="â–¶" FontSize="8"/>
                                            </Button>

                                            <!-- Song name â€” click to assign -->
                                            <Button Grid.Column="1"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    HorizontalContentAlignment="Left"
                                                    Padding="4,4"
                                                    Cursor="Hand"
                                                    Tag="{Binding}"
                                                    Click="LibraryItemAssign_Click"
                                                    ToolTip="Click to assign to slot">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </Button>

                                            <!-- Format tag -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding FormatTag}"
                                                       FontSize="10"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="4,0"/>

                                            <!-- Cached indicator -->
                                            <TextBlock Grid.Column="3"
                                                       Text="âœ“"
                                                       FontSize="10"
                                                       Foreground="{StaticResource SuccessBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"
                                                       ToolTip="Already converted and cached"
                                                       Visibility="{Binding IsCached, Converter={StaticResource BoolToVis}}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Popup>

            <!-- â”€â”€ Log Viewer â”€â”€ -->
            <Border Grid.Row="3"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    ClipToBounds="True">
                <TextBox x:Name="LogBox"
                         Style="{StaticResource LogTextBox}"
                         BorderThickness="0"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
