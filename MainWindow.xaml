<Window x:Class="LTTPEnhancementTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:LTTPEnhancementTools.Converters"
        xmlns:models="clr-namespace:LTTPEnhancementTools.Models"
        Title="ALttP Enhancement Tools"
        Icon="Resources/icon.ico"
        Width="760" MinWidth="520" MinHeight="380"
        SizeToContent="Height" MaxHeight="900"
        Background="{StaticResource BgBrush}"
        Foreground="{StaticResource TextBrush}"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Window.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVis"/>
        <conv:NullToVisibilityInverseConverter x:Key="NullToVisInv"/>
        <conv:ErrorToBrushConverter x:Key="ErrToBrush"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:BoolToVisibilityInverseConverter x:Key="BoolToVisInv"/>
        <conv:UrlToImageSourceConverter x:Key="UrlToImageConv"/>
    </Window.Resources>

    <DockPanel>

        <!-- ═══════════════════════ HEADER ═══════════════════════ -->
        <Border DockPanel.Dock="Top"
                Background="#14141A"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                MinHeight="80"
                Padding="16,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo left-aligned -->
                <Image Grid.Column="0"
                       Source="pack://application:,,,/Resources/lttpEnhancedLogo.png"
                       Height="100"
                       VerticalAlignment="Center"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <!-- Version badge -->
                <Border Grid.Column="2"
                        Background="{StaticResource SurfaceAltBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,3"
                        VerticalAlignment="Top"
                        Margin="0,2,0,0">
                    <TextBlock Text="v2.1.0"
                               FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                </Border>
            </Grid>
        </Border>

        <!-- ═══════════════════════ BOTTOM ACTION BAR ═══════════════════════ -->
        <Border DockPanel.Dock="Bottom"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,10">
            <StackPanel>
                <!-- Buttons row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Select ROM..."
                            Style="{StaticResource WarmButton}"
                            Padding="12,6"
                            Click="SelectRom_Click"/>

                    <TextBlock Grid.Column="1"
                               Text="{Binding AssignedCountText}"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <Button Grid.Column="2"
                            Content="Apply to ROM"
                            Style="{StaticResource AccentButton}"
                            Padding="14,6"
                            Margin="0,0,8,0"
                            IsEnabled="{Binding CanApply}"
                            Click="Apply_Click"/>

                    <Button Grid.Column="3"
                            Content="Apply &amp; Launch"
                            Style="{StaticResource AccentButton}"
                            Padding="14,6"
                            Margin="0,0,8,0"
                            IsEnabled="{Binding CanApply}"
                            Click="ApplyAndLaunch_Click"/>

                    <Button Grid.Column="4"
                            Content="Launch ROM ▶"
                            Style="{StaticResource DarkButton}"
                            Padding="12,6"
                            IsEnabled="{Binding CanLaunch}"
                            Visibility="{Binding CanLaunch, Converter={StaticResource BoolToVis}}"
                            Click="LaunchRom_Click"
                            ToolTip="Open the output ROM with your configured emulator"/>
                </Grid>

                <!-- Success message -->
                <TextBlock x:Name="ApplySuccessText"
                           FontSize="12"
                           Foreground="{StaticResource SuccessBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,0"
                           Visibility="Collapsed"/>

                <!-- Progress bar -->
                <Grid x:Name="ProgressSection" Visibility="Collapsed" Margin="0,6,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ProgressBar x:Name="ApplyProgress"
                                 Grid.Row="0"
                                 Style="{StaticResource DarkProgressBar}"
                                 Minimum="0" Maximum="100" Value="0"/>
                    <TextBlock x:Name="ProgressStepText"
                               Grid.Row="1"
                               FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,4,0,0"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- ═══════════════════════ MAIN SCROLLABLE CONTENT ═══════════════════════ -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="16,12,16,8">

                <!-- ── Sprite Section ── -->
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8"
                        Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sprite image / placeholder -->
                        <Grid Grid.Column="0" Width="64" Height="64"
                              HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Fallback: shown only when no preview and not random -->
                            <Border Background="#2A2A35"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Visibility="{Binding EffectivePreviewUrl, Converter={StaticResource NullToVisInv}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRandomSprite}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="Default"
                                           FontSize="11"
                                           Foreground="{StaticResource TextFaintBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <Image Source="{Binding EffectivePreviewUrl, Converter={StaticResource UrlToImageConv}}"
                                   Visibility="{Binding EffectivePreviewUrl, Converter={StaticResource NullToVis}}"
                                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                                   Stretch="Uniform"/>
                            <!-- Random placeholder: "?" or "?★" -->
                            <Border Background="#2A2A3A" CornerRadius="4">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRandomSprite}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding RandomGlyph}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="26" FontWeight="Bold" Foreground="#DAA520"/>
                            </Border>
                        </Grid>

                        <!-- Info and buttons -->
                        <Grid Grid.Column="1" VerticalAlignment="Center" Margin="8,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="LINK SPRITE"
                                           Style="{StaticResource SectionLabel}"
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock VerticalAlignment="Center" FontSize="13">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding SpriteDisplayName}"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                            <Setter Property="FontStyle" Value="Normal"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasSprite}" Value="False">
                                                    <Setter Property="Text" Value="Default (none selected)"/>
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                    <Setter Property="Foreground" Value="{StaticResource TextFaintBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <Button Content="Browse File..."
                                        Style="{StaticResource DarkButton}"
                                        Padding="10,4"
                                        Margin="0,0,6,0"
                                        Click="BrowseSprite_Click"
                                        ToolTip="Select a local .zspr or .spr file"/>
                                <Button Content="Browse Sprites..."
                                        Style="{StaticResource DarkButton}"
                                        Padding="10,4"
                                        Margin="0,0,6,0"
                                        Click="BrowseSpritesOnline_Click"
                                        ToolTip="Pick a sprite from the online ALttP sprite library"/>
                                <Button Content="✕"
                                        Style="{StaticResource ClearButton}"
                                        Visibility="{Binding HasSprite, Converter={StaticResource BoolToVis}}"
                                        Click="ClearSprite_Click"
                                        ToolTip="Remove sprite"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- ── Music Section (collapsible) ── -->
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Margin="0,0,0,8">
                    <StackPanel>
                        <!-- Header row (always visible) -->
                        <Grid Margin="8,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Content="{Binding MusicExpandIcon}"
                                    Style="{StaticResource ExpanderButton}"
                                    Margin="0,0,6,0"
                                    Click="ToggleMusic_Click"/>
                            <TextBlock Grid.Column="1"
                                       Text="MUSIC"
                                       Style="{StaticResource SectionLabel}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <Border Grid.Column="2"
                                    Background="{StaticResource SurfaceAltBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8,3">
                                <TextBlock Text="{Binding CurrentPlaylistDisplayName}"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <Button Grid.Column="4"
                                    Content="Load Playlist"
                                    Style="{StaticResource DarkButton}"
                                    Padding="8,4"
                                    Margin="0,0,6,0"
                                    Click="LoadPlaylist_Click"/>
                            <Button Grid.Column="5"
                                    Content="Save Playlist"
                                    Style="{StaticResource DarkButton}"
                                    Padding="8,4"
                                    Click="SavePlaylist_Click"/>
                            <Button Grid.Column="6"
                                    Content="Export Pack…"
                                    Style="{StaticResource DarkButton}"
                                    Padding="8,4"
                                    Margin="6,0,0,0"
                                    IsEnabled="{Binding CanExportPack}"
                                    Click="ExportPack_Click"
                                    ToolTip="Bundle assigned PCM files into a shareable .lttppack archive"/>
                            <Button Grid.Column="7"
                                    Content="Import Pack…"
                                    Style="{StaticResource DarkButton}"
                                    Padding="8,4"
                                    Margin="4,0,0,0"
                                    Click="ImportPack_Click"
                                    ToolTip="Extract and load a .lttppack archive"/>
                        </Grid>

                        <!-- Expandable: Track list -->
                        <Border Visibility="{Binding IsMusicExpanded, Converter={StaticResource BoolToVis}}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,1,0,0">
                            <StackPanel>
                                <!-- Search + Clear All -->
                                <Border Background="{StaticResource SurfaceAltBrush}"
                                        Padding="8,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="0,0,8,0">
                                            <TextBox x:Name="TrackSearch"
                                                     Style="{StaticResource DarkTextBox}"
                                                     TextChanged="TrackSearch_TextChanged"/>
                                            <TextBlock IsHitTestVisible="False"
                                                       Foreground="{StaticResource TextFaintBrush}"
                                                       FontStyle="Italic"
                                                       FontSize="12"
                                                       Padding="10,0,0,0"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Text, ElementName=TrackSearch}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Setter Property="Text" Value="Search tracks…"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                        <Button Grid.Column="1"
                                                Content="Clear All"
                                                Style="{StaticResource DarkButton}"
                                                Padding="10,4"
                                                Click="ClearAllTracks_Click"
                                                ToolTip="Remove all track assignments"/>
                                    </Grid>
                                </Border>

                                <!-- Track list: max 10 rows + own scroll -->
                                <DataGrid x:Name="TrackGrid"
                                          Style="{StaticResource DarkDataGrid}"
                                          ItemsSource="{Binding Tracks}"
                                          BorderThickness="0"
                                          RowHeight="36"
                                          MaxHeight="390"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          ScrollViewer.CanContentScroll="True"
                                          VirtualizingPanel.IsVirtualizing="True">
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn Header="Slot" Width="52" CanUserResize="False">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate DataType="{x:Type models:TrackSlot}">
                                                        <TextBlock Text="{Binding SlotDisplay}"
                                                                   FontWeight="Bold" FontSize="12"
                                                                   Foreground="{StaticResource TextMutedBrush}"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   FontFamily="Consolas"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Track" Width="200" CanUserResize="True">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate DataType="{x:Type models:TrackSlot}">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontSize="13" FontWeight="Medium"
                                                                   Foreground="{StaticResource TextBrush}"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   ToolTip="{Binding Name}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Assigned File" Width="*" CanUserResize="True">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate DataType="{x:Type models:TrackSlot}">
                                                        <Grid VerticalAlignment="Center">
                                                            <TextBlock Visibility="{Binding HasFile, Converter={StaticResource BoolToVis}}"
                                                                       Text="{Binding FileName}"
                                                                       FontFamily="Consolas" FontSize="12"
                                                                       Foreground="{Binding ValidationError, Converter={StaticResource ErrToBrush}}"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       VerticalAlignment="Center"
                                                                       ToolTip="{Binding ValidationError}"/>
                                                            <TextBlock Visibility="{Binding HasFile, Converter={StaticResource BoolToVisInv}}"
                                                                       Text="unassigned"
                                                                       FontStyle="Italic" FontSize="12"
                                                                       Foreground="{StaticResource TextFaintBrush}"
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Actions" Width="230" CanUserResize="False">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate DataType="{x:Type models:TrackSlot}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,6,0">
                                                            <Button Visibility="{Binding HasFile, Converter={StaticResource BoolToVis}}"
                                                                    Content="{Binding PlayButtonText}"
                                                                    Style="{StaticResource IconButton}"
                                                                    Margin="0,0,6,0"
                                                                    CommandParameter="{Binding}"
                                                                    Click="PlayStop_Click"
                                                                    ToolTip="Preview track"/>
                                                            <Button Content="Library"
                                                                    Style="{StaticResource DarkButton}"
                                                                    Padding="8,4" FontSize="12"
                                                                    Margin="0,0,6,0"
                                                                    CommandParameter="{Binding}"
                                                                    Click="LibraryPick_Click"
                                                                    ToolTip="Pick from Music Library"/>
                                                            <Button Padding="8,4" FontSize="12"
                                                                    Margin="0,0,6,0"
                                                                    CommandParameter="{Binding}"
                                                                    Click="Replace_Click">
                                                                <Button.Style>
                                                                    <Style TargetType="Button" BasedOn="{StaticResource DarkButton}">
                                                                        <Setter Property="Content" Value="Pick File"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding HasFile}" Value="True">
                                                                                <Setter Property="Content" Value="Replace"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                            </Button>
                                                            <Button Visibility="{Binding HasFile, Converter={StaticResource BoolToVis}}"
                                                                    Content="✕"
                                                                    Style="{StaticResource ClearButton}"
                                                                    CommandParameter="{Binding}"
                                                                    Click="Clear_Click"
                                                                    ToolTip="Remove assignment"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- ── Auto Launcher Section (collapsible) ── -->
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Margin="0,0,0,8">
                    <StackPanel>
                        <!-- Header row (always visible) -->
                        <Grid Margin="8,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Content="{Binding AutoLauncherExpandIcon}"
                                    Style="{StaticResource ExpanderButton}"
                                    Margin="0,0,6,0"
                                    Click="ToggleAutoLauncher_Click"/>
                            <TextBlock Grid.Column="1"
                                       Text="AUTO LAUNCHER"
                                       Style="{StaticResource SectionLabel}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <ComboBox x:Name="TrackerCombo"
                                      Grid.Column="2"
                                      Style="{StaticResource DarkComboBox}"
                                      Margin="0,0,6,0"
                                      SelectionChanged="TrackerCombo_SelectionChanged">
                                <ComboBoxItem Content="(none)" Tag=""/>
                                <ComboBoxItem Content="Dunka's Community Tracker" Tag="https://alttprtracker.mfns.dev/"/>
                                <ComboBoxItem Content="alttprtracker.com" Tag="https://alttprtracker.com/"/>
                            </ComboBox>
                            <Button Grid.Column="3"
                                    Content="Open Now"
                                    Style="{StaticResource DarkButton}"
                                    Padding="8,4"
                                    Click="OpenTracker_Click"
                                    ToolTip="Open the tracker in your browser now"/>
                        </Grid>

                        <!-- Expandable: full launch settings -->
                        <Border Visibility="{Binding IsAutoLauncherExpanded, Converter={StaticResource BoolToVis}}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="12,10">
                            <StackPanel>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Emulator -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="Emulator"
                                               FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,0,6"/>
                                    <TextBox Grid.Row="0" Grid.Column="1"
                                             Style="{StaticResource DarkTextBox}"
                                             Text="{Binding EmulatorPath, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                             Margin="0,0,6,6"
                                             ToolTip="Path to your emulator EXE (e.g. EmuHawk.exe)"/>
                                    <Button Grid.Row="0" Grid.Column="2"
                                            Content="Browse"
                                            Style="{StaticResource DarkButton}"
                                            Padding="8,4"
                                            Margin="0,0,0,6"
                                            Click="BrowseEmulator_Click"/>

                                    <!-- Connector Script -->
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Text="Connector Script"
                                               FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,0,6"
                                               ToolTip="Lua connector script for Archipelago (passed as --lua to BizHawk)"/>
                                    <TextBox Grid.Row="1" Grid.Column="1"
                                             Style="{StaticResource DarkTextBox}"
                                             Text="{Binding ConnectorScriptPath, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                             Margin="0,0,6,6"/>
                                    <Button Grid.Row="1" Grid.Column="2"
                                            Content="Browse"
                                            Style="{StaticResource DarkButton}"
                                            Padding="8,4"
                                            Margin="0,0,0,6"
                                            Click="BrowseConnector_Click"/>

                                    <!-- SNI -->
                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Text="SNI"
                                               FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,0,6"
                                               ToolTip="SNI.exe — started automatically before the emulator"/>
                                    <TextBox Grid.Row="2" Grid.Column="1"
                                             Style="{StaticResource DarkTextBox}"
                                             Text="{Binding SniPath, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                             Margin="0,0,6,6"/>
                                    <Button Grid.Row="2" Grid.Column="2"
                                            Content="Browse"
                                            Style="{StaticResource DarkButton}"
                                            Padding="8,4"
                                            Margin="0,0,0,6"
                                            Click="BrowseSni_Click"/>

                                    <!-- Seed URL -->
                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               Text="Seed URL"
                                               FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               VerticalAlignment="Center"
                                               ToolTip="Your alttpr.com seed link — saved for reference"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                             Style="{StaticResource DarkTextBox}"
                                             Text="{Binding SeedUrl, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                                </Grid>

                                <Button Content="⚙ Run Setup Wizard…"
                                        Style="{StaticResource DarkButton}"
                                        HorizontalAlignment="Right"
                                        Padding="10,4"
                                        Margin="0,10,0,0"
                                        Click="SetupWizard_Click"
                                        ToolTip="Re-run the setup wizard to reconfigure emulator, connector, SNI and tracker"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- ── Configuration Section (collapsible) ── -->
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Margin="0,0,0,8">
                    <StackPanel>
                        <!-- Header row (always visible) -->
                        <Grid Margin="8,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Content="{Binding ConfigExpandIcon}"
                                    Style="{StaticResource ExpanderButton}"
                                    Margin="0,0,6,0"
                                    Click="ToggleConfig_Click"/>
                            <TextBlock Grid.Column="1"
                                       Text="CONFIGURATION"
                                       Style="{StaticResource SectionLabel}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="2"
                                       Text="Output Name:"
                                       FontSize="12"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,6,0"/>
                            <TextBox Grid.Column="3"
                                     Style="{StaticResource DarkTextBox}"
                                     Text="{Binding OutputBaseName, UpdateSourceTrigger=PropertyChanged}"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     ToolTip="File name stem used for all output files (e.g. myrom → myrom.sfc, myrom.msu, myrom-2.pcm)"/>
                        </Grid>

                        <!-- Expandable: Library + Output folder -->
                        <Border Visibility="{Binding IsConfigExpanded, Converter={StaticResource BoolToVis}}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="12,10">
                            <StackPanel>
                                <!-- Library -->
                                <TextBlock Text="MUSIC LIBRARY"
                                           Style="{StaticResource SectionLabel}"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0"
                                            Background="{StaticResource SurfaceAltBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,6,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontFamily="Consolas" FontSize="11"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="320">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding LibraryFolder}"/>
                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                        <Setter Property="FontStyle" Value="Normal"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding LibraryFolder}" Value="{x:Null}">
                                                                <Setter Property="Text" Value="No library folder set"/>
                                                                <Setter Property="FontStyle" Value="Italic"/>
                                                                <Setter Property="Foreground" Value="{StaticResource TextFaintBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding LibrarySongCount}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="6,0,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <Button Grid.Column="1"
                                            Content="Change Location..."
                                            Style="{StaticResource DarkButton}"
                                            Padding="8,4"
                                            Click="BrowseLibrary_Click"
                                            ToolTip="Move the Music Library to a different folder"/>
                                </Grid>

                                <!-- Output Folder -->
                                <TextBlock Text="OUTPUT FOLDER"
                                           Style="{StaticResource SectionLabel}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0"
                                            Background="{StaticResource SurfaceAltBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,6,0">
                                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontFamily="Consolas" FontSize="11"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding OutputDir}"/>
                                                    <Setter Property="FontStyle" Value="Normal"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding OutputDir}" Value="{x:Null}">
                                                            <Setter Property="Text" Value="Auto-set when ROM is selected"/>
                                                            <Setter Property="FontStyle" Value="Italic"/>
                                                            <Setter Property="Foreground" Value="{StaticResource TextFaintBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                    <Button Grid.Column="1"
                                            Content="Browse..."
                                            Style="{StaticResource DarkButton}"
                                            Padding="8,4"
                                            Margin="0,0,6,0"
                                            Click="BrowseOutputDir_Click"/>
                                    <Button Grid.Column="2"
                                            Content="🗑"
                                            Style="{StaticResource ClearButton}"
                                            Padding="8,4"
                                            Click="CleanOutputFolder_Click"
                                            ToolTip="Delete all files in the output folder"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- ── Library Popup ── (floats, positioned relative to PlacementTarget) -->
                <Popup x:Name="LibraryPopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       Closed="LibraryPopup_Closed">
                    <Border Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="10"
                            Width="320"
                            MaxHeight="440">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="{Binding LibraryTargetSlotName}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       Margin="0,0,0,6"/>

                            <Grid Grid.Row="1" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="0,0,6,0">
                                    <TextBox x:Name="LibrarySearch"
                                             Style="{StaticResource DarkTextBox}"
                                             TextChanged="LibrarySearch_TextChanged"/>
                                    <TextBlock IsHitTestVisible="False"
                                               Foreground="{StaticResource TextFaintBrush}"
                                               FontStyle="Italic"
                                               FontSize="12"
                                               Padding="10,0,0,0"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=LibrarySearch}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Setter Property="Text" Value="Search…"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <TextBlock x:Name="LibraryResultCount"
                                           Grid.Column="1"
                                           FontSize="10"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <ScrollViewer Grid.Row="2"
                                          MaxHeight="300"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="LibraryList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource RowHoverBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <Button Grid.Column="0"
                                                        Style="{StaticResource IconButton}"
                                                        Width="22" Height="22"
                                                        Margin="2"
                                                        Tag="{Binding}"
                                                        Click="LibraryItemPlay_Click"
                                                        ToolTip="Preview this song"
                                                        IsEnabled="{Binding IsPlayable}">
                                                    <TextBlock Text="▶" FontSize="8"/>
                                                </Button>
                                                <Button Grid.Column="1"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        HorizontalContentAlignment="Left"
                                                        Padding="4,4"
                                                        Cursor="Hand"
                                                        Tag="{Binding}"
                                                        Click="LibraryItemAssign_Click"
                                                        ToolTip="Click to assign to slot">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="12"
                                                               Foreground="{StaticResource TextBrush}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </Button>
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding FormatTag}"
                                                           FontSize="10"
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           VerticalAlignment="Center"
                                                           Margin="4,0"/>
                                                <TextBlock Grid.Column="3"
                                                           Text="✓"
                                                           FontSize="10"
                                                           Foreground="{StaticResource SuccessBrush}"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,4,0"
                                                           ToolTip="Already converted and cached"
                                                           Visibility="{Binding IsCached, Converter={StaticResource BoolToVis}}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Popup>

                <!-- ── Log Viewer ── -->
                <Border BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        ClipToBounds="True"
                        Height="90">
                    <TextBox x:Name="LogBox"
                             Style="{StaticResource LogTextBox}"
                             BorderThickness="0"/>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>
